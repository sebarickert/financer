    "mongodb": "^3.6.2",
    "mongodb-client-encryption": "1.2.3",
    "mongodb-memory-server": "^6.9.2",
    "mongoose": "^5.10.13",
    "passport": "^0.4.1",
    "passport-auth0": "^1.4.0",
    "passport-github2": "^0.1.12",
    "typescript": "^4.2.3"
